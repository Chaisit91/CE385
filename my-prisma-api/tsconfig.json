{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames":true,
    "sourceMap": true

  },
  "include": ["src/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules"]
}